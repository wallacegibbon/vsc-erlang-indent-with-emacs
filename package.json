{
	"name": "erlang-indent-with-emacs",
	"displayName": "Erlang Indent With Emacs",
	"description": "indent the erlang source code with emacs",
	"version": "2.1.0",
	"publisher": "wallacegibbon",
	"license": "Apache License",
	"repository": {
		"type": "git",
		"url": "https://github.com/wallacegibbon/vsc-erlang-indent-with-emacs.git"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:erlang"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "erlang",
				"aliases": [
					"Erlang",
					"erlang"
				],
				"extensions": [
					".erl",
					".escript"
				]
			}
		],
		"configuration": {
			"title": "Erlang Indent With Emacs",
			"properties": {
				"erlang_emacs_format.erlang_sdk_path": {
					"description": "Formatter to use",
					"type": "string"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"publish": "npx vsce publish",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"@vscode/vsce": "^2.24.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2"
	}
}
